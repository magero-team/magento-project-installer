# file that was distributed with this source code.

source /lib/lsb/init-functions
source $(readlink -f $(dirname $(readlink -f $0)))/config

case "$1" in
"install")
    ${PACKAGE_PATH}/bin/project-install
    ;;
"uninstall")
    ${PACKAGE_PATH}/bin/project-uninstall
    ;;
"reinstall")
    ${PACKAGE_PATH}/bin/project-reinstall
    ;;
*)
    if [ -z "$1" ]; then
        log_failure_msg "Command is required"
    else
        log_failure_msg "Undefined command: $1"
    fi
    exit 1;
    ;;
esac
